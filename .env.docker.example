# PostgreSQL Configuration
POSTGRES_DB=exlo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
# POSTGRES_PORT=5432  # Uncomment for local debugging only

# Domain Configuration (Required for production)
DOMAIN=example.com
TUNNEL_DOMAIN=tunnel.example.com

# SSL/TLS Configuration (Let's Encrypt)
ACME_EMAIL=admin@example.com

# DNS Provider for wildcard certificate (default: cloudflare)
# Supported providers: https://doc.traefik.io/traefik/https/acme/#providers
DNS_PROVIDER=cloudflare

# Cloudflare DNS credentials (required if using cloudflare)
CF_API_EMAIL=your-cloudflare-email@example.com
CF_DNS_API_TOKEN=your-cloudflare-api-token

# Web Dashboard Configuration
BETTER_AUTH_SECRET=your-auth-secret-min-32-chars

# Internal API Configuration (shared between web and tunnl services)
# Must be at least 32 characters in production
INTERNAL_API_SECRET=your-internal-api-secret-min-32-chars

# Tunnl Configuration
SSH_PORT=2222
RUST_LOG=info

# Optional Tunnl Configuration (uncomment to customize)
# MGMT_PORT=9090
# CODE_EXPIRY_SECS=300
# POLL_INTERVAL_SECS=2
# MAX_POLL_ATTEMPTS=150
# SERVER_KEY_PATH=server_key.pem

# Note: DATABASE_URL is automatically constructed from POSTGRES_* variables
# Note: Management API (port 9090) is internal only and not exposed
# Note: BETTER_AUTH_URL and CORS_ORIGIN are automatically set from DOMAIN
