{
  "name": "exlo",
  "private": true,
  "license": "AGPL-3.0-only",
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "better-auth": "^1.4.7"
    }
  },
  "scripts": {
    "check": "ultracite check .",
    "fix": "ultracite fix .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F @exlo/web dev",
    "dev:docs": "turbo -F @exlo/docs dev",
    "dev:landing": "turbo -F @exlo/landing dev",
    "db:push": "turbo -F @exlo/db db:push",
    "db:studio": "turbo -F @exlo/db db:studio",
    "db:generate": "turbo -F @exlo/db db:generate",
    "db:migrate": "turbo -F @exlo/db db:migrate",
    "db:start": "turbo -F @exlo/db db:start",
    "db:watch": "turbo -F @exlo/db db:watch",
    "db:stop": "turbo -F @exlo/db db:stop",
    "db:down": "turbo -F @exlo/db db:down"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "^22.13.11",
    "turbo": "^2.6.3",
    "typescript": "^5",
    "ultracite": "6.4.2"
  },
  "packageManager": "bun@1.3.4"
}
